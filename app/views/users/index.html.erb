<div class="timeline requests">
    <div class="friends-requests">
        <% if current_user.friends_requests.any? %>
            <p>Respond to Your Friend Request</p>
            <% current_user.friends_requests.each do | request |%>
                <li>   
                    <div class= "creator">
                        <%= gravatar_for request %>
                        <%= request.first_name %> 
                        <%= request.last_name %>
                    </div>
                    <div id="friends-btn">
                        <%= button_to "#" do %>
                            Confirm
                        <% end %>
                        <%= button_to "#" do %>
                            Delete request
                        <% end %>
                    </div>
                </li>
            <% end %>
        <% else %>
            <p>No New Friend Requests</p>
        <% end %>
    </div>

    <div class="friends-suggestions">
        <p>People You May Know</p>
        <% @users.each do | user |%>
        <ul>
            <% unless user == current_user %>
                <li>
                    <div class= "creator">
                        <%= gravatar_for user %>
                        <%= user.first_name %> 
                        <%= user.last_name %>
                    </div>

                    <% if current_user.friend?(user) %>
                        <%= button_to post_like_path(post, @like_id), method: :delete, class: "unlike" do %>
                            <i class="fas fa-thumbs-up"></i>Like
                        <% end %>
                    <% else %>
                        <%= button_to user_friendships_path(user), method: :post, class:"like-btn"  do %>
                            <i class="fas fa-user-plus"></i> Add friend
                        <% end %>  
                    <% end %>
                
                </li>
            <% end %>
        </ul>
        <% end %>
    </div>
</div>
