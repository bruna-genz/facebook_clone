<div class="columns">
   
      <div class="column column-1" >Auto</div>
  




   <div class="column is-half">
      <%= gravatar_for current_user %>
      <%= form_for @post, :url => { :controller => "posts", :action => "create" }, :html => {:method => :post} do |f| %>

         <%= render 'dashboards/partials/errors' %>

         <%= f.label :content, 'What are you thinking?'%> <br/>
         <%= f.text_area :content, size: '65x5', placeholder: 'Post something...' %><br/>

         <%= f.submit "Create post"%>

      <% end %>
   </div>

   <div class="column column-3">Auto</div>


</div>