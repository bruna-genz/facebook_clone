<div class="comment-form">
    <%= gravatar_for current_user %>
    <%= form_for @comment, :url => { :controller => "comments", :action => "create" }, :html => {:method => :get} do |f| %>
        <%= f.text_area :sub_content %>
        <%= f.hidden_field :post_id, :value => post.id %>
        <%= f.submit 'comment '%>
    <% end %>
</div>

