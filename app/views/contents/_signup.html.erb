<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'sign-up-form'} ) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="right-container">

  </div>

  <div class="left-container">

    <h2>Create a New Account</h2>
    <p>Itâ€™s quick and easy.</p>

    <div class="names">
      <div class="field">
        <%= f.text_field :first_name, autofocus: true, placeholder: "First name" %>
      </div>

      <div class="field">
        <%= f.text_field :last_name, placeholder: "last name" %>
      </div>
    </div>

    <div class="field">
      <%= f.email_field :email, placeholder: "Email adress" %>
    </div>

    <div class="field">
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, placeholder: "new-password" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, placeholder: "new-password" %>
    </div>


    <div class="field">
      <%= f.label :birthday %><br />
      <%= f.date_field :birthday %>
    </div>

    <div class="field">
      <%= f.label :gender %><br />
      <%= f.select(:gender, options_for_select([['male', 1], ['female', 2], ['other', 3]], 3)) %>
    </div>

    
    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  </div>
<% end %>